<%= link_to event, class: "black-text" do %>
  <div class="card z-depth-0 event-detail">
    <div class="card-content">
      <span class="card-title event-detail-text event-detail-text-title <%= event.event_category.title.downcase %>"><%= event.event_category.title %> Events</span>
      <p class="light grey-text">By: <%= event.by %></p>
    </div>
  </div>
<% end %>