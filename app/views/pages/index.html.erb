<%= render partial: "common/song-search" %>

<% if @songs.count > 0 %>
  <div class="song-list">
    <div class="song-list__tag">
      <% @songs.each do |song| %>
        <%= link_to song, class: "song-item__tag white" do %>
          <div class="song-item__tag-content black-text">
            <div class="song-item__tag-color js-color"></div>
            <%= song.title %>
          </div>
        <% end %>
      <% end %>
      <% if @songs.count >= 10 %>
        <div class="song-list__more">
          <%= link_to "See All...", songs_path , class: "grey-text" %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>

<% if @events.count > 0 %>
  <div class="row">
    <% @events.each do |event| %>
      <div class="col s12 m12 l4">
        <%= render partial: "common/event-content", locals: { event: event } %>
      </div>
    <% end %>
  </div>
<% end %>