<% @detail_songs.each do |detail_song| %>
  <div class="card z-depth-0" id="<%= anchor_text(detail_song.song.title) %>">
    <div class="card-content">
      <span class="card-title"><strong><%= detail_song.song.title %></strong></span>
      <p class="grey-text"><%= detail_song.song.artist %></p>
      <div class="display-song">
        <%= raw detail_song.song.lyrics_and_chords %>
      </div>
    </div>
  </div>
<% end %>